# ==============================================
# SPOTEX CMS - Environment Variables Template
# ==============================================
# Copia questo file in .env e configura i valori

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=spotex_cms_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@postgres:5432/spotex_cms_db

# PostgreSQL Performance Tuning
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb
CACHE_TTL=3001GB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_PRE_PING=true

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://redis:6379/0

# ==============================================
# JWT & AUTHENTICATION
# ==============================================
JWT_SECRET_KEY=your-very-long-and-secure-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

LOG_LEVEL=info
APP_NAME=Spotex CMS
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
BACKEND_PORT=8000
WORKERS=4

# Performance Settings
UVICORN_LIMIT_CONCURRENCY=1000
UVICORN_BACKLOG=2048
DEBUG=false
APP_NAME=Spotex CMS
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ADMIN_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_NAME=Spotex CMS Admin
NODE_ENV=development
NODE_OPTIONS=--max-old-space-size=2048

# ==============================================
# FRONTEND - PUBLIC RENDER
# ==============================================
RENDER_PORT=3001
NEXT_PUBLIC_RENDER_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_SITE_NAME=Spotex Website

# ==============================================
# NGINX CONFIGURATION
# ==============================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ==============================================
# NETWORK CONFIGURATION
# ==============================================
NETWORK_SUBNET=172.20.0.0/16

# ==============================================
# BUILD INFORMATION
# ==============================================
BUILD_DATE=2026-01-09
VERSION=1.0.0

# ==============================================
# RESOURCE LIMITS (Docker Deploy)
# ==============================================
# Backend Resources
BACKEND_CPU_LIMIT=2
BACKEND_MEMORY_LIMIT=1G
BACKEND_CPU_RESERVATION=0.5
BACKEND_MEMORY_RESERVATION=512M

# Frontend Admin Resources
ADMIN_CPU_LIMIT=1
ADMIN_MEMORY_LIMIT=512M
ADMIN_CPU_RESERVATION=0.25
ADMIN_MEMORY_RESERVATION=256M

# Frontend Render Resources
RENDER_CPU_LIMIT=1
RENDER_MEMORY_LIMIT=512M
RENDER_CPU_RESERVATION=0.25
RENDER_MEMORY_RESERVATION=256M

# Nginx Resources
NGINX_CPU_LIMIT=1
NGINX_MEMORY_LIMIT=256M
NGINX_CPU_RESERVATION=0.25
NGINX_MEMORY_RESERVATION=128M
# ==============================================
# FRONTEND - PUBLIC RENDER
# ==============================================
NEXT_PUBLIC_RENDER_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_SITE_NAME=Spotex Website

# ==============================================
# NGINX CONFIGURATION
# ==============================================
NGINX_PORT=80
NGINX_SSL_PORT=443

