# Nginx Configuration Environment Variables

# SSL Configuration
SSL_EMAIL=admin@spotex.com
STAGING=0  # Set to 1 for Let's Encrypt staging (testing)

# Domains
DOMAINS=api.spotex.com,dashboard.spotex.com
WILDCARD_DOMAIN=*.spotex.com

# DH Parameters
DH_SIZE=2048

# Rate Limiting
API_RATE_LIMIT=10r/s
AUTH_RATE_LIMIT=5r/m
GENERAL_RATE_LIMIT=50r/s

# Caching
API_CACHE_SIZE=100m
STATIC_CACHE_SIZE=500m
API_CACHE_INACTIVE=60m
STATIC_CACHE_INACTIVE=7d

# Timeouts
CLIENT_BODY_TIMEOUT=12
CLIENT_HEADER_TIMEOUT=12
SEND_TIMEOUT=10
PROXY_CONNECT_TIMEOUT=60
PROXY_READ_TIMEOUT=60

# Buffer Sizes
CLIENT_MAX_BODY_SIZE=100M
CLIENT_BODY_BUFFER_SIZE=128k

# Worker Configuration
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=4096
WORKER_RLIMIT_NOFILE=65535

# Logging
LOG_LEVEL=warn
ACCESS_LOG_FORMAT=detailed

# Security
SERVER_TOKENS=off
